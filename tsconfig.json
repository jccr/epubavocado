{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "lib/esm",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/"]
}
